{
    "name": "Hide scores",
    "version": "1.0",
    "description": "Don't show scores",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "storage",
        "declarativeContent"
    ],
    "page_action": {
        "default_popup": "popup.html"
    }
}